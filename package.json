{
  "name": "@n3okill/tslinq",
  "version": "1.1.1",
  "description": "Use Linq Enumerable in typescript",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    "require": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/cjs/index.js"
    },
    "import": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/esm/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/n3okill/tslinq.git"
  },
  "bugs": {
    "url": "https://github.com/n3okill/tslinq/issues"
  },
  "homepage": "https://github.com/n3okill/tslinq#readme",
  "scripts": {
    "build:cjs": "npx tsc -p tsconfig.cjs.json && echo {\"type\": \"commonjs\"} > dist/cjs/package.json",
    "build:esm": "npx tsc -p tsconfig.esm.json && echo {\"type\": \"module\"} > dist/esm/package.json",
    "build:types": "npx tsc -p tsconfig.types.json",
    "build": "npm run clean && npm run build:cjs && npm run build:esm && npm run build:types",
    "clean": "npx rimraf dist",
    "lint": "eslint",
    "test": "node --test --experimental-strip-types \"tests/**/*.test.ts\"",
    "test:coverage": "node --test --experimental-strip-types --experimental-test-coverage --test-reporter=spec --test-reporter-destination=stdout --test-reporter=lcov --test-reporter-destination=lcov.info \"tests/**/*.test.ts\"",
    "test:watch": "node --test --experimental-strip-types --watch \"tests/**/*.test.ts\"",
    "format": "prettier --config .prettierrc \"src/**/*.ts\" \"tests/**/*.ts\" \"docs/**/*.md\" --write",
    "prepare": "npm run build",
    "preversion": "npm run format && npm run lint && npm test",
    "version": "git add -A .",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@dymexjs/globcli": "^0.0.4",
    "@eslint/js": "^9.22.0",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/eslint-plugin-security": "^3.0.0",
    "@types/node": "^22.13.10",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-tsdoc": "^0.4.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1"
  },
  "keywords": [
    "linq"
  ],
  "files": [
    "dist/**/*"
  ],
  "author": {
    "name": "Jo√£o Parreira",
    "email": "joaofrparreira@gmail.com"
  },
  "license": "MIT"
}
